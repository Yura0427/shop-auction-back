doctype html
html
    head
        style.
            .confirmedWindowContainer {
                width: 100%;
                height: 100%;
                padding-bottom: 2%;
                background-color: whitesmoke;

            }

            .Text {
                font-size: 20px;
                color: black;
                margin: auto;
                padding-left: 40px;
            }

            .header {
                height: 40px;
                width: 100%;
                background-color: #26bd62;
            }

    body
        div.confirmedWindowContainer
            div.header
            div.Text
                p Ім'я:
                    | !{' '}
                    = (name)
                p Пошта:
                    | !{' '}
                    = (email)
                p Повідомлення:
                    | !{' '}
                    = (text)
